<?xml version='1.0' ?>
<launch>
  <arg name='physics' default='ode' />
  <arg name='world' default='$(find mbzirc_gazebo)/worlds/kentland.world' />

  <node name='gazebo' pkg='gazebo_ros' type='gzserver' respawn='false' output='screen' args='--verbose -e $(arg physics) $(arg world)' />
  <node name='gazebo_gui' pkg='gazebo_ros' type='gzclient' respawn='false' output='screen' />

  <!-- Launch Bogey 0 model and system -->
  <include file='$(find mbzirc_gazebo)/launch/support/standard_bogey.launch'>
    <arg name='id' value='0' />
  </include>
  <include file='$(find mbzirc_system)/launch/bogey0.launch'>
    <arg name='fcu_url' value='udp://localhost:14540@localhost:14557' />
  </include>

  <!-- Launch Bogey 1 model and system -->
  <include file='$(find mbzirc_gazebo)/launch/support/standard_bogey.launch'>
    <arg name='id' value='1' />
    <arg name='x' value='3' />
  </include>
  <include file='$(find mbzirc_system)/launch/bogey1.launch'>
    <arg name='fcu_url' value='udp://localhost:14640@localhost:14657' />
  </include>

  <!-- Launch Bogey 2 model and system -->
  <include file='$(find mbzirc_gazebo)/launch/support/standard_bogey.launch'>
    <arg name='id' value='2' />
    <arg name='x' value='-3' />
  </include>
  <include file='$(find mbzirc_system)/launch/bogey2.launch'>
    <arg name='fcu_url' value='udp://localhost:14740@localhost:14757' />
  </include>
</launch>
